{
  "name": "odyssey",
  "description": "Odyssey is a writing app for seamlessly managing books and the scenes within.",
  "author": {
    "name": "Anirudh Kuppili",
    "email": "anirudhkuppili@gmail.com"
  },
  "version": "2.0.0",
  "main": "electron/main.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start -p 3000",
    "electron": "electron .",
    "dist": "cross-env NODE_ENV=production npm run build && electron-builder"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@reduxjs/toolkit": "^2.2.0",
    "dotenv": "^16.5.0",
    "draft-convert": "^2.1.13",
    "draft-js": "^0.11.7",
    "express": "^4.21.2",
    "fuse.js": "^7.1.0",
    "next": "latest",
    "react": "^18.2.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.6",
    "react-icons": "^5.5.0",
    "react-redux": "^9.1.0",
    "styled-components": "^6.1.16"
  },
  "devDependencies": {
    "@types/draft-convert": "^2.1.8",
    "@types/draft-js": "^0.11.18",
    "@types/node": "20.2.5",
    "@types/react": "18.2.37",
    "@types/react-dom": "^18.2.18",
    "cross-env": "^7.0.3",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.odyssey.app",
    "productName": "Odyssey",
    "compression": "store",
    "directories": {
      "buildResources": "electron/assets",
      "output": "release"
    },
    "files": [
      "electron/main.js",
      "package.json",
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      "!node_modules/**",
      "!**/*.map",
      "!**/.next/cache/**/*",
      "!**/*.ts",
      "!**/*.d.ts",
      "!**/README.md",
      "!**/CHANGELOG.md",
      "!**/LICENSE*",
      "!**/test{,s}/**",
      "!**/__tests__/**",
      "!**/__mocks__/**",
      "!**/node_modules/.bin",
      "!**/node_modules/*/README*",
      "!**/node_modules/*/CHANGELOG*",
      "!**/node_modules/*/LICENSE*",
      "!**/node_modules/*/test{,s}/**",
      "!**/node_modules/*/example/**"
    ],
    "mac": {
      "icon": "electron/assets/icon.icns"
    },
    "win": {
      "icon": "electron/assets/icon.ico",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "publish": [],
      "icon": "electron/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "electron/assets/icon.ico",
      "uninstallerIcon": "electron/assets/icon.ico",
      "installerHeader": "electron/assets/odyssey_header.bmp",
      "installerSidebar": "electron/assets/odyssey_sidebar.bmp",
      "uninstallerSidebar": "electron/assets/odyssey_sidebar.bmp",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Odyssey",
      "deleteAppDataOnUninstall": true
    }
  }
}
